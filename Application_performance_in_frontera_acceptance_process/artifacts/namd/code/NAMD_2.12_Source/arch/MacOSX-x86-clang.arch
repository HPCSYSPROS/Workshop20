NAMD_ARCH = MacOSX-x86
CHARMARCH = multicore-darwin-x86

CXX = clang++ -m32 -std=c++0x -fPIC -dynamic -fno-common -mmacosx-version-min=10.7 -D_REENTRANT -D_NO_MALLOC_H
FLOATOPTS = -O3 -fomit-frame-pointer -march=pentium-m -msse3 -ffast-math
CXXOPTS = $(FLOATOPTS)
CC = clang -m32 -fPIC -dynamic -fno-common -mmacosx-version-min=10.7 -D_REENTRANT
COPTS = $(FLOATOPTS)

